{% import "button_layout.twig" as forms %}
{% block content %}

{% for object in lady_objects %}

<div class="col-3"> 
    <li class="list-group-item m-2 text-center">
        <div>
            <img src="{{ object.image }}" class="border border-2 rounded-3" style="width: 260px; height: 290px;">
        </div>

        <div class="mt-2">
            <div class="row">
                {{ forms.input( object.title, true, object.url ) }}
            </div>
            <div>
                {{ forms.input('Картинка', false, object.img_content ) }}
                {{ forms.input('Описание', false, object.info_content ) }} 
            </div> 
        </div>
    </li>
</div>
{% endfor %}

{% endblock %}