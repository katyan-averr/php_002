{% import "button_layout.twig" as forms %}
{% block content %}

{% for object in lady_objects %}

<div class="col-3"> 
    <li class="list-group-item m-2 text-center ">
        <div>
            <img src="{{ object.image }}" class="border border-2 rounded-3" style="width: 200px; height: 200px;">
        </div>

        <div class="mt-2">
            <div class="row m-2">
                <a class = "btn btn-primary" href="/lady_objects/{{object.id}}">{{object.title}}</a>
            </div>
            <div class="mb-4">
                <a class = "btn btn-link" href="/lady_objects/{{object.id}}/image">Картинка</a>
                <a class = "btn btn-link" href="/lady_objects/{{object.id}}/info">Описание</a>
            </div>  
        </div>
    </li>
</div>
{% endfor %}

{% endblock %}